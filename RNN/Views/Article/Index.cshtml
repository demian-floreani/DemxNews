<div class="row row-equal opinion-header-row">
    <div class="col-xs-12 col-md-8 middle-column">
        <header>
            <h1>@Model.Article.HeadLine</h1>
            <p>@Model.Article.Paragraph</p>
        </header>
    </div>
    <div class="d-none d-sm-none d-md-block col-md-4 opinion-page-side-header">
        <h3>@Model.Article.EntryToTopics.First(et => et.IsPrimary == true).Topic.Name</h3>
        <section></section>
        <section></section>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-md-8 middle-column">
        <article>
            @if (!String.IsNullOrEmpty(Model.Article.Url))
            {
                var host = new Uri(Model.Article.Url).Host;
                <p class="source">Sourced from <a href="@Model.Article.Url" target="_blank">@host</a></p>
            }

            <img class="article-img" src="~/images/uploads/@Model.Article.Img" alt="article image" />

            <div class="row">
                <div class="col-sm-12">
                    @Html.Raw(@Model.Article.Body)
                </div>
            </div>

            <div class="row comments">
                <div class="col-md-12">
                    <button id="show-comments" class="btn">Load Comments</button>
                    <div id="disqus_thread"></div>
                </div>
            </div>
        </article>
    </div>
    <div class="col-md-4">
        <div class="row side-block">
            <div class="col-sm-12">
                <mark><span>Topics</span></mark>

                <div class="inner">
                    @foreach (var t in Model.Topics)
                    {
                        <div class="topic">@t.Name</div>
                    }
                </div>
            </div>
        </div>

        @*<div class="row side-block">
                <div class="col-sm-12">
                    <mark><span>Enjoy our content?</span></mark>

                    <div class="inner">
