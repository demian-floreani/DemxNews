@model RNN.Models.ViewModels.ViewComponents.HorizontalMediumBlockViewComponent

@*<div class="row horizontal-block-row">*@
    <div class="col-sm-12 horizontal-block-column @(Model.HasBorder ? "block-border" : "")">
        @*<div class="prefix">@Model.Title</div>*@
        <mark><span>@Model.Topic</span></mark>
        <div class="seperator"></div>
        <a asp-route="display" asp-route-slug="@Model.Slug">
            <div class="horizontal-block">
                <div class="row">
                    <div class="col-sm-6 left-column">
                        <picture>
                            <source srcset="~/images/uploads/@Model.Img-tiny.WebP" type="image/webp">
                            <img class="article-img" src="~/images/uploads/@Model.Img-tiny.Jpg" alt="">
                        </picture>
                    </div>
                    <div class="col-sm-6 right-column">
                        <header>
                            @*@if (Model.Topic != null)
                            {
                                <span class="post-tag">@Model.Topic</span><span class="post-span-divider">/</span>
                            }*@
                            <span>@Model.HeadLine</span>
                        </header>
                    </div>
                </div>
            </div>
        </a>
    </div>
@*</div>*@