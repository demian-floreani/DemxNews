@model RNN.Models.ViewModels.ViewComponents.VerticalBlockViewComponent

<div class="row vertical-block-row">
    <div class="col-sm-12 vertical-block-column @(Model.HasBorder ? "border" : "")">
        <div class="prefix">@Model.Title</div>
        <a asp-route="display" asp-route-slug="@Model.Slug">
            <div class="vertical-block">
                <img src="~/images/uploads/@Model.Img" />
                <header>
                    @if (Model.Topic != null)
                    {
                        <span class="post-tag">@Model.Topic</span><span class="post-span-divider">/</span>
                    }
                    <span>@Model.HeadLine</span>
                </header>
            </div>
        </a>
    </div>
</div>