@model RNN.Models.ViewModels.ViewComponents.HorizontalMediumBlockViewComponent

<a asp-route="display" asp-route-slug="@Model.Slug" style="width:100%">
    <div class="horizontal-block">
        
        <div class="col-sm-12 horizontal-block-column @(Model.HasBorder ? "block-border" : "")">
            <div class="seperator d-none d-md-block"></div>
            <div class="row">
                <div class="seperator"></div>
                <!-- display in larger -->
                <div class="d-sm-block d-none col-sm-6 left-column">
                    <picture>
                        <source srcset="~/images/uploads/@Model.Img-tiny.WebP" type="image/webp">
                        <img class="article-img" src="~/images/uploads/@Model.Img-tiny.Jpg" alt="">
                    </picture>
                </div>
                <!-- display in smaller -->
                <div class="d-block d-sm-none d-md-none d-lg-none col-sm-6 left-column">
                    <header>
                        <mark><span class="mark-span">@Model.Topic</span></mark><span>@Model.HeadLine</span>
                    </header>
                </div>

                <!-- display in smaller -->
                <div class="d-block d-sm-none d-md-none d-lg-none col-sm-6 right-column">
                    <picture>
                        <source srcset="~/images/uploads/@Model.Img-tiny.WebP" type="image/webp">
                        <img class="article-img" src="~/images/uploads/@Model.Img-tiny.Jpg" alt="">
                    </picture>

                    <section>
                        @Model.Paragraph
                    </section>
                </div>
                <!-- display in larger -->
                <div class="d-none d-sm-block d-md-block d-lg-block col-sm-6 right-column">
                    <div class="flex-container">
                        <header>
                            <mark><span class="mark-span">@Model.Topic</span></mark><span>@Model.HeadLine</span>
                        </header>

                        <section class="d-block d-sm-none d-md-none d-lg-none d-xl-block">
                            @Model.Paragraph
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>
